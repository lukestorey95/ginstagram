<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li>{{this.user_id.name}} wrote: {{this.message}}
    {{#if this.image}}
      <div class="image" >
        <img src={{this.image}} height="200" width="200">
      </div>
    {{/if}}
    
    <form action="/likes" method="post">
      <input type="hidden" name="post_id" value={{this._id}}>
      <input class="like-button" type="submit" value="Like: {{this.likes.likes_array.length}}">
    </form>
    
    <div class="comments">
      {{#each this.comments}}
        {{this.comment}}
      {{/each}}
      <form id="new-comment-form" action="/comments" method="post">
        <input id="comment" placeholder="comment" type="text" name="comment" value="">
        <input id="post_id" name="post_id" type="hidden" value="{{this._id}}">
        <input type="submit" value="Comment">
      </form>
    </div>
  </li>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>

